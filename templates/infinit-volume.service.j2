[Unit]
Description=infinit.sh volume

[Service]
Type=simple
User=root
Group=wheel

ExecStart=/opt/infinit/bin/infinit volume mount --as {{ infinit_user }} --name {{ infinit_volume_name }} --mountpoint {{ infinit_volume_mount }} --allow-root-creation --cache --publish

Restart=always
RestartSec=15

[Install]
WantedBy=multi-user.target
